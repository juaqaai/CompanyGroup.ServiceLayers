	$("#fancy_box_ads").fancybox({
		'closeBtn': 'true',
		'height'			: '75%',
        'autoScale'     	: false,
        'transitionIn'		: 'none',
		'transitionOut'		: 'none',
		'type'				: 'iframe'
	});

}

@section ScriptsInBottom {
    <script id="newsletter_template" type="text/x-jquery-tmpl">
		{{each( i, item ) Items}}
		
        <div style="width:230px; position:relative; float:left; margin:5px; " class="expand_heading" >
            <div class="toggle_container">
                <div>
                @*${item.AllowedDateTime}
                        ${item.SequenceNumber}
                        ${item.NewsletterId}
		                ${item.Title}
		                ${item.Description}*@
                {{if item.PicturePath.length > 0}}
                    <a id="fancy_box_ads" class="popupimg" href="https://www.hrp.hu/Articles/${item.HtmlPath}" target="_blank" title="${item.Title}"><img style="max-width:230px; max-height:230px;" src="https://www.hrp.hu/Articles/${item.PicturePath}" alt="${item.PicturePath}" /></a>
                {{else}}
                    <a id="fancy_box_ads" class="popupimg" href="https://www.hrp.hu/Articles/${item.HtmlPath}" target="_blank" max-width="240px" title="${item.Title}"><img src="@Url.Content("~/Content/Media/images/demopic.jpg")" width="100px" height="100px" alt="" /></a>
                {{/if}}
                </div>
                <div style=" margin-top:-4px; padding:5px; font-size:14px; background-color:#f4f4f4; color: #4874a5; height:50px; border:1px solid #dddddd; border-radius:0px 0px 3px 3px; ">
                  <strong>${item.Description}</strong>
                </div>
            </div>
        </div>
        {{/each}}
    </script>

    @Scripts.Render("~/bundles/newsletter")

}

